{% set classes = [
  'grid',
  'max-w-sm bg-sky-200',
  'rounded-xl shadow-lg',
  'overflow-hidden',
] %}
<div {{ attributes.addClass(classes) }}>
  <div>{{ image }}</div>
  <div class="p-4 text-sky-900">
    <div class="text-3xl font-bold">{{ title }}</div>
    <div>{{ description }}</div>
  </div>
</div>

